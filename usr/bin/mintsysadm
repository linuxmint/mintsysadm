#!/usr/bin/python3

import os
import subprocess
import sys

if len(sys.argv) > 1:
    args = sys.argv[1:]
else:
    args = []

if os.getuid() != 0:
    subprocess.run(["pkexec", "/usr/bin/mintsysadm"] + args)
else:
    exit(subprocess.run(["/usr/lib/linuxmint/mintsysadm/mintsysadm.py"] + args).returncode)
